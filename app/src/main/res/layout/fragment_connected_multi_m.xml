
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clmaldonado.multiplebt.ConnectedMultiMP"
    android:keepScreenOn="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout">
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/Receive"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_play_circle_outline_white_18dp"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:id="@+id/Stop"
        android:layout_toRightOf="@id/Receive"
        android:layout_toEndOf="@id/Receive"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_stop_white_18dp"
        android:visibility="gone"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/Stop"
        android:layout_toRightOf="@id/Stop"
        android:id="@+id/Calibrar"
        android:text="@string/calibrate"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_reorder_white_18dp"
        android:visibility="gone"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/graficas">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>